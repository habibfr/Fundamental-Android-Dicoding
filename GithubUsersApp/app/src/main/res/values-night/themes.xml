<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.GithubUsersApp" parent="Theme.Material3.Dark.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorTertiary">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
    </style>

    <style name="Theme.GithubUsersApp" parent="Base.Theme.GithubUsersApp">
        <item name="android:fontFamily">@font/poppins_reguler</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorTertiary">@color/colorAccent</item>
        <item name="android:colorBackground">#9A5862</item>
    </style>

    <style name="CustomTabLayout" parent="Widget.MaterialComponents.TabLayout">
        <item name="tabBackground">@drawable/tab_background</item>
        <item name="tabTextColor">@color/colorBackground</item>
        <item name="tabSelectedTextColor">#FFFFFF</item>
        <item name="tabTextAppearance">@style/TabTextAppearance</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
</resources>